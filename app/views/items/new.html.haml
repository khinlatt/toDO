.container
  %h2.title-line-task Add a new task

  .pad-bot

  = form_for [@todo, @item], class: "form" do |f|
    .form-group
      = f.label :description
      = f.text_field :description, class: "form-control"
    = f.submit "Add", class: "btn btn-warning"

  = link_to "Back", todo_items_path, :class => "btn btn-default pull-right"
