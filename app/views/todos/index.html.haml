-# %h1.text-center To-Do App

.container
  .col-md-7.custom-well.mar-bot
    %h2.todo-color
      To-Do
      %span.glyphicon.glyphicon-exclamation-sign
    - @todos.each do |t|
      %table.table
        %tr
          %td
            .note= "> #{t.name}"
          %td
            .pull-right
              %small= link_to "Show tasks", todo_items_path(t)
              |
              %small= link_to "Edit", edit_todo_path(t), :method => :get
              |
              %small= link_to "Mark as Done", markasdone_todo_path(t), :method => :post

    .pull-right
      = link_to "Add a topic", new_todo_path, :class => "font-white text-link-reset btn btn-info", :method => :get

  .col-md-4.col-md-offset-1.well
    %h2.todone-color
      To-Done
      %span.glyphicon.glyphicon-ok
    - @todone.each do |t|
      %table.table
        %tr
          %td
            .note.cross-line= t.name
          %td
            .pull-right
              %small= link_to "Remove", t, :confirm => "Are you sure?", :method => :delete
